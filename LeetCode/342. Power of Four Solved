class Solution {
public:
    bool isPowerOfFour(int n) {
        ios_base::sync_with_stdio(false);     cin.tie(nullptr);     cout.tie(nullptr);
        if(n<=0) return false;
        while(n>1){
            if(n%4!=0){
                return false;
            }
            n/=4;
        }
        return true;

        
    }
};
